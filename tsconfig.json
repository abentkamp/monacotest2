{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "declaration": true,

    /* Linting */
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    "experimentalDecorators": true,

    "outDir": "./dist",  
  },
  "include": ["src/index.ts"]
}
